<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/exp"
        tools:context=".expenditure_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:padding="18dp"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp">
            <LinearLayout
                android:id="@+id/main"
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="12dp"
                    android:text="Assets"
                    android:textSize="22sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Assets category"
                    android:textSize="18sp"/>
                <AutoCompleteTextView
                    android:id="@+id/assetsCat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="true"
                    android:textStyle="italic"
                    android:hint="Housing,Insurance,Property"
                    android:ems="10"
                    android:inputType="text"/>
                   <EditText
                       android:id="@+id/descriptionAssets"
                       android:textStyle="italic"
                       android:layout_marginTop="10dp"
                       android:hint="Assets Description"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>
                <EditText
                    android:hint="Depreciation Percentage"
                    android:textStyle="italic"
                    android:layout_marginTop="10dp"
                    android:id="@+id/depreciationPercentageAssets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"/>

               <!-- <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Expense"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/expenses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="true"
                    android:ems="10"
                    android:inputType="text"
                    android:text="" />-->
                <EditText
                    android:id="@+id/assetsAmount"
                    android:textStyle="italic"
                    android:hint="amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="true"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:inputType="number" />
                <EditText
                    android:hint="Date"
                    android:textStyle="italic"
                    android:id="@+id/assetsCreatedDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="true"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:inputType="date" />
                <Button
                    android:id="@+id/addAssetExp"
                    android:layout_width="120dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_height="wrap_content"
                    android:text="Button" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           app:cardCornerRadius="8dp"
           android:layout_marginTop="8dp"
           app:cardElevation="6dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <LinearLayout
               android:padding="5dp"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="24dp"
                   android:layout_gravity="center_horizontal"
                   android:layout_marginBottom="12dp"
                   android:text="Direct Assets"
                   android:textSize="22sp"
                   android:textStyle="bold"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="10dp"
                   android:text="Direct Assets Category"
                   android:textSize="18sp"/>
               <AutoCompleteTextView
                   android:id="@+id/directAssetsCat"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:focusable="false"
                   android:clickable="true"
                   android:textStyle="italic"
                   android:hint="Housing,Insurance,Property"
                   android:ems="10"
                   android:inputType="text"/>
               <EditText
                   android:hint="Direct Assets Description"
                   android:id="@+id/descriptionDirectAssets"
                   android:textStyle="italic"
                   android:layout_marginTop="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>
               <EditText
                   android:hint="amount"
                   android:textStyle="italic"
                   android:id="@+id/directAssetAmount"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:focusable="false"
                   android:clickable="true"
                   android:layout_marginTop="10dp"
                   android:ems="10"
                   android:inputType="number" />
               <EditText
                   android:hint="Date"
                   android:textStyle="italic"
                   android:id="@+id/directAssetCreatedDate"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:focusable="false"
                   android:clickable="true"
                   android:layout_marginTop="10dp"
                   android:ems="10"
                   android:inputType="date" />
                <Button
                    android:id="@+id/addDirectAssetsExp"
                    android:layout_width="120dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_height="wrap_content"
                    android:text="Button" />
           </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="12dp"
                    android:text="Indirect Assets"
                    android:textSize="22sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Indirect Assets Category"
                    android:textSize="18sp"/>
                <AutoCompleteTextView
                    android:id="@+id/indirectAssetsCat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="true"
                    android:textStyle="italic"
                    android:hint="Housing,Insurance,Property"
                    android:ems="10"
                    android:inputType="text"/>
                <EditText
                    android:textStyle="italic"
                    android:layout_marginTop="10dp"
                    android:hint="Indirect Assets Description"
                    android:id="@+id/indirectDescriptionAssets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:textStyle="italic"
                    android:hint="amount"
                    android:layout_marginTop="10dp"
                    android:id="@+id/indirectExpenseAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="true"
                    android:ems="10"
                    android:inputType="number" />
                <EditText
                    android:textStyle="italic"
                    android:hint="Date"
                    android:layout_marginTop="10dp"
                    android:id="@+id/indirectExpCreatedDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="true"
                    android:ems="10"
                    android:inputType="date" />
                <Button
                    android:id="@+id/addIndirectAssets"
                    android:layout_width="120dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_height="wrap_content"
                    android:text="Button" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>