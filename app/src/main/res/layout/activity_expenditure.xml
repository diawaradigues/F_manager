<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/exp"
    tools:context=".expenditure_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="18dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="400dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="6dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:id="@+id/main"
                    android:padding="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="12dp"
                        android:text="Assets"
                        android:textSize="22sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Assets category"
                        android:textSize="18sp"/>
                    <AutoCompleteTextView
                        android:id="@+id/assetsCat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:clickable="true"
                        android:textStyle="italic"
                        android:hint="Housing,Insurance,Property"
                        android:ems="10"
                        android:inputType="text"/>
                    <EditText
                        android:id="@+id/descriptionAssets"
                        android:textStyle="italic"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:clickable="true"
                        android:layout_marginTop="10dp"
                        android:hint="Assets Description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:hint="Depreciation Percentage"
                        android:textStyle="italic"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_marginTop="10dp"
                        android:id="@+id/depreciationPercentageAssets"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"/>
                    <EditText
                        android:id="@+id/assetsAmount"
                        android:textStyle="italic"
                        android:hint="amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:clickable="true"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:inputType="number" />
                    <EditText
                        android:hint="Date"
                        android:textStyle="italic"
                        android:id="@+id/assetsCreatedDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:clickable="true"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:inputType="date" />
                    <Button
                        android:id="@+id/addAssetExp"
                        android:layout_width="120dp"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content"
                        android:text="Add Assets" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="20dp"
                app:cardElevation="6dp"
                android:layout_width="400dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="12dp"
                        android:text="Direct Assets"
                        android:textSize="22sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Direct Assets Category"
                        android:textSize="18sp"/>
                    <AutoCompleteTextView
                        android:id="@+id/directAssetsCat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:clickable="true"
                        android:textStyle="italic"
                        android:hint="Feed,chicks,labour"
                        android:ems="10"
                        android:inputType="text"/>
                    <EditText
                        android:hint="Direct Assets Description"
                        android:id="@+id/descriptionDirectAssets"
                        android:textStyle="italic"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:clickable="true"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:hint="amount"
                        android:textStyle="italic"
                        android:id="@+id/directAssetAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:clickable="true"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:inputType="number" />
                    <EditText
                        android:hint="Date"
                        android:textStyle="italic"
                        android:id="@+id/directAssetCreatedDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:clickable="true"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:inputType="date" />
                    <Button
                        android:id="@+id/addDirectAssetsExp"
                        android:layout_width="120dp"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content"
                        android:text="Add Direct Assets" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="6dp"
                app:cardElevation="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="400dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="12dp"
                        android:text="Indirect Assets"
                        android:textSize="22sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Indirect Assets Category"
                        android:textSize="18sp"/>
                    <AutoCompleteTextView
                        android:id="@+id/indirectAssetsCat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:clickable="true"
                        android:textStyle="italic"
                        android:hint="Insurance,Tax,Marketing"
                        android:ems="10"
                        android:inputType="text"/>
                    <EditText
                        android:textStyle="italic"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:hint="Indirect Assets Description"
                        android:id="@+id/indirectDescriptionAssets"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:textStyle="italic"
                        android:hint="amount"
                        android:layout_marginTop="10dp"
                        android:id="@+id/indirectExpenseAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:clickable="true"
                        android:ems="10"
                        android:inputType="number" />
                    <EditText
                        android:textStyle="italic"
                        android:hint="Date"
                        android:layout_marginTop="10dp"
                        android:id="@+id/indirectExpCreatedDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:clickable="true"
                        android:ems="10"
                        android:inputType="date" />
                    <Button
                        android:id="@+id/addIndirectAssets"
                        android:layout_width="120dp"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content"
                        android:text="Add Indirect Assets" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="6dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:layout_width="400dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="8dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sales"
                        android:layout_gravity="center"
                        android:textSize="22sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="8dp"
                        android:textStyle="bold"/>
                    <EditText
                        android:textStyle="italic"
                        android:hint="Customer Name"
                        android:layout_marginTop="10dp"
                        android:id="@+id/edit_customer_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:ems="10"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:inputType="text" />
                    <EditText
                        android:textStyle="italic"
                        android:hint="Quantity of Birds"
                        android:layout_marginTop="10dp"
                        android:id="@+id/edit_quantity"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="numberDecimal" />
                    <EditText
                        android:textStyle="italic"
                        android:hint="Unit Cost"
                        android:layout_marginTop="10dp"
                        android:id="@+id/edit_unit_cost"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="numberDecimal" />
                    <EditText
                        android:textStyle="italic"
                        android:hint="Price"
                        android:layout_marginTop="10dp"
                        android:id="@+id/edit_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:clickable="true"
                        android:ems="10"
                        android:inputType="numberDecimal" />
                    <EditText
                        android:textStyle="italic"
                        android:hint="Date"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_marginTop="10dp"
                        android:id="@+id/edit_date_sales"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:ems="10"
                        android:inputType="date" />
                    <Button
                        android:id="@+id/add_sale"
                        android:layout_marginTop="8dp"
                        android:layout_width="128dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Add Sale"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

