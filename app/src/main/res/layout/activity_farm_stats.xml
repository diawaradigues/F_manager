<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:id="@+id/farmStats"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:orientation="vertical"
    tools:context=".Farm_stats">
        <TextView
            android:id="@+id/Exp_Cat_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Financial Metrics"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Sales" />
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Gross Profit"
                        android:textStyle="bold" />
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Net Profit"
                        android:textStyle="bold" />
                  <!--  <TextView
                        android:gravity="center"
                        android:layout_marginBottom="12dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Operating profit"/>-->
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/totalSalesValue"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:text="Total Sales value"/>
                    <TextView
                        android:id="@+id/grossProfitValue"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gross profit value"/>
                    <TextView
                        android:id="@+id/netProfitValue"
                        android:gravity="center"
                        android:layout_marginBottom="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Net profit value"/>
                   <!-- <TextView
                        android:id="@+id/operatingProfitValue"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Operating profit value"/>-->
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--non finacial stats cards-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Non Financial Metrics"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="6dp">
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:padding="4dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Production Yield"/>
                    <TextView
                        android:gravity="center"
                        android:layout_marginTop="12dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Feed Conversion Rate" />

                    <TextView
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Average Daily Gain" />
                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mortality Rate" />

                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Water Consumption" />

                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Break-Even Point" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:gravity="center"
                        android:id="@+id/productionYieldValue"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Production Yield value"/>
                    <TextView
                        android:gravity="center"
                        android:id="@+id/feedConversionRateValue"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Feed Conversion Rate Value" />

                    <TextView
                        android:gravity="center"
                        android:id="@+id/averageDailyGainValue"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Average Daily Gain Value" />
                    <TextView
                        android:gravity="center"
                        android:id="@+id/mortalityRateValue"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mortality Rate Value" />

                    <TextView
                        android:gravity="center"
                        android:id="@+id/waterConsumptionValue"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Water Consumption Value" />
                    <TextView
                        android:gravity="center"
                        android:id="@+id/breakEvenPValue"
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Break-Even Point Value" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/getStatsButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop='8dp'
            android:layout_gravity="center"
            android:text="Get Stats"/>
</LinearLayout>


