<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sales"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="18dp"
    tools:context=".sales_activity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sales"
        android:textSize="22sp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"/>
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:textStyle="italic"
                android:hint="Customer Name"
                android:layout_marginTop="10dp"
                android:id="@+id/edit_customer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:ems="10"
                android:focusable="false"
                android:inputType="text" />
            <EditText
                android:textStyle="italic"
                android:hint="Quantity of Birds"
                android:layout_marginTop="10dp"
                android:id="@+id/edit_quantity"
                android:focusable="false"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal" />
            <EditText
                android:textStyle="italic"
                android:hint="Unit Cost"
                android:layout_marginTop="10dp"
                android:id="@+id/edit_unit_cost"
                android:focusable="false"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal" />
            <EditText
                android:textStyle="italic"
                android:hint="Price"
                android:layout_marginTop="10dp"
                android:id="@+id/edit_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                android:ems="10"
                android:inputType="numberDecimal" />
            <EditText
                android:textStyle="italic"
                android:hint="Date"
                android:layout_marginTop="10dp"
                android:id="@+id/edit_date_sales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:ems="10"
                android:inputType="date" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Balance :"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Status :"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/add_sale"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add Sale"/>

</LinearLayout>