<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/number_of_broilers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:textSize="25sp"
                android:text="Number of Broilers" />
            <TextView
                android:id="@+id/time_period"
                android:layout_width="wrap_content"
                android:textSize="25sp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:text="Time Period  " />
            <TextView
                android:id="@+id/total_feed_consumed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="10dp"
                android:text="Total Feed Consumed " />
            <TextView
                android:id="@+id/total_weight_Gain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="10dp"
                android:text="Total Weight Gain " />
            <TextView
                android:id="@+id/number_of_Broilers_died"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="10dp"
                android:text="Number of broilers Died " />
            <TextView
                android:id="@+id/total_number_of_broilers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="10dp"
                android:text="Total Number of Broilers " />
            <TextView
                android:id="@+id/number_of_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="10dp"
                android:text="Number of days " />
            <TextView
                android:id="@+id/total_water_consumed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="10dp"
                android:text="Total water Consumed " />
            <TextView
                android:id="@+id/selling_price_per_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="10dp"
                android:text="selling price per unit " />
            <TextView
                android:id="@+id/variable_cost_per_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="10dp"
                android:text="Variable cost per Unit " />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>